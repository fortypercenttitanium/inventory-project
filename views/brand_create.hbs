<h1>{{title}}</h1>

<div>
  <form method="POST" action="">
    <label for="name">Brand name: </label>
    <input value="{{name_exists brand}}" name="name" id="name" style="padding:5px" type="text" required placeholder="Enter brand name">
    <button style="padding:4px;" type="submit">Submit</button>
  </form>
</div>

{{#if errors }}
<ul>
	{{#each errors}}
	<li>{{ this.msg }}</li>
	{{/each}}
</ul>
{{/if}}