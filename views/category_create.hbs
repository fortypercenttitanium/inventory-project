<h1>{{title}}</h1>

<div>
  <form method="POST" action="">
    <div style='display:block;'>
      <input name="name" id="name" style="padding:5px" type="text" required placeholder="Enter category name" value="{{name_exists category}}"">
      <textarea name="description" id="description" style="padding:5px;" required placeholder="Enter description">{{description_exists category}}</textarea>
      <br>
      <button style="padding:4px;" type="submit">Submit</button>
    </div>
    
  </form>
</div>

{{#if errors }}
<ul>
	{{#each errors}}
	<li>{{ this.msg }}</li>
	{{/each}}
</ul>
{{/if}}